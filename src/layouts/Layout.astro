---
interface Props {
	// Define any props you want to pass to the layout
	title?: string;
	description?: string;
	image?: string;
}

const { title, description="a community with music and enthusiast", image="/images/band.jpg" } = Astro.props as Props;

---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content={description} />
		<meta property="og:image" content={image} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title> {title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
