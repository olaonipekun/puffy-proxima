---
import {type CollectionEntry, getEntryBySlug} from "astro:content"
import {Image} from "astro:assets"


type Props = {
    post: CollectionEntry<"posts">
}

const {post} = Astro.props

---

<article>
    <a
        class="text-white"
        href={`/blog/${post.slug}`}
        aria-label={`Read more about ${post.data.title}`}
    >
    <Image 
        src={post.data.image}
        width={600}
        height={600 / 1.5}
        alt={post.data.title}
        class="rounded-2xl shadow-xl object-cover mb-4 aspect-thumbnail"
    />
    </a>


    <a
        href={`/blog/${post.slug}`}
        class="text-4xl font-semibold inline-block"
    >
        {post.data.title}
    </a>

    <p class=" text-2xl mb-9 line-clamp-2">
        {post.body}
    </p>

</article>